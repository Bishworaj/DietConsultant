<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingBottom="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="While this app will ensure that you are eating in proper amount, you must remain physically active and mentally positive to remain healthy."
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:textAlignment="center"
        android:text="Being a couch-potato will lead to reduction in muscle mass and heart problems."
        android:layout_below="@+id/textView01"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:text="And too much tension, fear or sadness will hamper your body in many ways, resulting physical problems such as blood pressure."
        android:textAlignment="center"
        android:layout_below="@+id/textView02"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="111dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />


</RelativeLayout>