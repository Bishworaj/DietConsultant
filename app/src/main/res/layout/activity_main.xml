<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gaurav.dietconsultant.MainActivity">

    <Button
        android:id="@+id/calorie_intake_button"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:textAlignment="center"
        android:gravity="center"
        android:padding="20dp"
        android:text="Calculate daily recommended calorie intake"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="115dp"
        android:layout_marginTop="97dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/food_list_button" />

    <Button
        android:id="@+id/food_list_button"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:padding="30dp"
        android:text="View food list with calorie content"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="266dp"
        android:layout_below="@+id/calorie_intake_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp" />



</RelativeLayout>
